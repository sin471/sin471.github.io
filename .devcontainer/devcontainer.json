{
  "name": "Next.js Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "bradlc.vscode-tailwindcss", // Tailwindの補完
        "dbaeumer.vscode-eslint",    // ESLint
        "esbenp.prettier-vscode",    // 自動整形
        "dsznajder.es7-react-js-snippets" // Reactのコード片
      ]
    }
  },
  "forwardPorts": [3000] // Next.jsのデフォルトポート
}
